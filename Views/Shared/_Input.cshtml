@{ 
    var Text = null as dynamic;
    var IsReply = null as dynamic;
}

<div class="row">
        
    <div class="card card-columns bg-info input_leftCol">
        <img class="card-img input_pic" src="~/pic.png" />
    </div>

    <div class="card bg-info col-auto input_rightCol">
        <form asp-controller="tweet" asp-action="CreateTweet">
            <div class="form-group">    
                <div class="card-body row input_body">
                    <textarea asp-for="@Text" class="input_textarea form-control"></textarea>
                    <span asp-validation-for="@Text" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="@IsReply" type="hidden" value="0" />
            </div>
            <div class="card-footer row input_footer">
                <div class="input_footer_col1">

                </div>
                <div class="input_footer_col2">
                    <button type="submit" class="input_send btn btn-primary">Publicar</button>
                </div>
            </div>
        </form>
    </div>

</div>